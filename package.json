{
  "name": "@abd3lraouf/aicommit",
  "version": "2.0.1",
  "description": "Git Commit Script - Generate smart commit messages with emojis",
  "main": "dist/index.js",
  "bin": {
    "aicommit": "./aicommit-cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "scripts",
    "aicommit-cli.js",
    "README.md",
    "LICENSE",
    ".env.example",
    ".aicommitrc.json",
    "AI_SERVER_SETUP.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node --es-module-specifier-resolution=node dist/index.js",
    "dev": "tsc --watch",
    "prepublishOnly": "pnpm run build",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "prepare": "pnpm run build",
    "postbuild": "chmod +x dist/index.js dist/cli.js && echo '#!/usr/bin/env node' | cat - dist/cli.js > dist/cli.js.tmp && mv dist/cli.js.tmp dist/cli.js",
    "changelog": "node scripts/utils/generate-changelog.mjs",
    "changelog:write": "node scripts/utils/generate-changelog.mjs --write",
    "setup": "cp -n .env.example .env || echo '.env file already exists'",
    "setup:config": "node scripts/setup/setup-config.mjs",
    "postinstall": "node scripts/setup/postinstall.mjs || echo 'Skipping postinstall script'",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.mjs",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.mjs --watch",
    "test:api": "node scripts/utils/test-api.mjs"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "conventional-commits",
    "emoji",
    "commit-message"
  ],
  "author": "Abdelraouf Sabri <hello@abd3lraouf.dev> (https://abd3lraouf.dev)",
  "homepage": "https://github.com/abd3lraouf/aicommit#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/abd3lraouf/aicommit"
  },
  "bugs": {
    "url": "https://github.com/abd3lraouf/aicommit/issues"
  },
  "license": "MIT",
  "dependencies": {
    "boxen": "8.0.1",
    "chalk": "5.4.1",
    "cosmiconfig": "9.0.0",
    "deepmerge": "4.3.1",
    "dotenv": "^16.5.0",
    "figures": "6.1.0",
    "log-symbols": "7.0.0",
    "yargs": "^17.7.2",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@types/deepmerge": "2.2.3",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.18",
    "@types/yargs": "^17.0.33",
    "typescript": "^5.8.3"
  },
  "type": "module",
  "packageManager": "pnpm@8.15.5",
  "pnpm": {
    "neverBuiltDependencies": []
  }
}